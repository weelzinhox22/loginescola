# Evitar dependências nativas que causam falhas em ambientes sem acesso à compilação
rollup-plugin-native=false
platform=linux
target_arch=x64
node_options=--max_old_space_size=4096
rollup_skip_native=true
disable_binary=true
# Forçar use-npm-prefix para evitar binários nativos
use-node-prefix=true
# Preferir versões pré-compiladas
prefer-offline=true
prefer-binary=true 